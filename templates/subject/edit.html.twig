{% extends 'base.html.twig' %}

{% block title %}GobelInterogation
{% endblock %}

{% block body %}
	<div class="block">
		{{ form_start(form) }}
		<div class="field">
			<label class="label">Éditer la question</label>
			<div class="help is-danger">{{ form_errors(form.title) }}</div>
			<div class="control">
				{{ form_widget(form.title, {'attr': {'class': 'input'}}) }}
			</div>
		</div>
		<div class="field">
			<label class="label">Éditer les détails de la question</label>
			<div class="help is-danger">{{ form_errors(form.content) }}</div>
			<div class="control">
				{{ form_widget(form.content, {'attr': {'class': 'textarea'}}) }}
			</div>
		</div>
		<div class="field">
			<div class="control">
				{{ form_widget(form.poster, {'attr': {'class': 'button'}, 'label': 'Save' }) }}
			</div>
		</div>
		{{ form_end(form) }}
	</div>
{% endblock %}
